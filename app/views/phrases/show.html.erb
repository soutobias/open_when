<div class='all'>
    <div class="container text-center justify-content-center align-middle">
      <h1 class="font-weight-bold all-header">Vanessa</h1>
      <h2 class="font-weight-bold all-header">Você abriu essa carta...</h2>
      <% if @value %>
        <h2 class="font-weight-bold all-header">Porque você quis. Então, eu abri para você uma carta aleatória, para você ler...</h2>
      <% end %>
      <h2 class="font-weight-bold all-header"><%= @phrase.sentence.capitalize %></h2>
    </div>
</div>
<div class='container pt-4 mt-4 text-center'>
  <div>
    <% if @phrase.link? %>
      <% if @phrase.link.downcase == 'spotify' %>
        <div class="w-75 p-4 text-center link">
          <iframe src="https://open.spotify.com/embed/track/661Ns9G25zHdih4qVshBO7" width="100%" height="80" frameBorder="0" allowtransparency="true" allow="encrypted-media"></iframe>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="description">
    <p><%= @phrase.answer %></p>
  </div>
  <div class="photos">
    <% if @phrase.photos.attached? %>
      <div class="row">
        <% @phrase.photos.each_with_index do |file, idx| %>
          <div class="col-md-3 col-12">
            <%= cl_image_tag file.key, class: "photo" %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to "Abrir outra carta", phrases_path, class: 'btn btn-outline-dark mt-4' %>
  <div class='mt-3'>
    <% if @phrase.link? %>
      <% if @phrase.link.downcase == 'lazaro' %>
        <iframe id="ytplayer" type="text/html" width="640" height="360"
          src="http://www.youtube.com/embed/jmKM8uw8u9Q?autoplay=1&origin=http://example.com"
          frameborder="0"/>
      <% end %>
    <% end %>
  </div>
</div>
